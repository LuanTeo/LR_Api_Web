{{> main}}
    {{#*inline('content')}}
        <div class="flex flex-row items-center ml-3 gap-5 p-8">
  <!-- icon favorite-->
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="#F9531F"
    stroke="#F9531F"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-heart self-center w-8 h-8 ml-3"
  >
    <path
      d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
    />
  </svg>
  <h1 class="font-bold text-3xl">Favoritos</h1>
</div>
<div class="flex flex-col w-full">
  {{#each favoritos}}
    <!-- item Favorito -->
    <div
      class="flex flex-row justify-between w-5/6 h-36 p-1 ml-4 bg-gray-200 hover:bg-gray-300 border-2 border-[#2A3DA4] rounded-md shadow-[5px_3px_5px_#2A3DA4]"
    >
      <div class="flex flex-row gap-4 items-center">
        <img
          src="{{this.imagem}}"
          alt="imagemSetup"
          class="h-full rounded-lg"
        />
        <p class="text-xl font-semibold">{{this.nome}}</p>
      </div>
      <div class="flex flex-row h-11/12 w-5/12 border-l-2 border-[#2A3DA4]">
        <div class="flex flex-col pl-4 w-1/2">
          <p class="line-through text-gray-600 text-base font-medium">
            R$ {{this.valor*1.3}}
          </p>
          <p class="text-[#F9531F] text-2xl font-bold">R$ {{this.valor}}</p>
          <p class="text-black ml-10 text-xs font-bold text-left">
            √Å vista no PIX
          </p>
        </div>
        <div class="flex flex-col justify-between w-1/2">
          <!--icon favorite-->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="#F9531F"
            stroke="#F9531F"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-heart self-end justify-self-end w-8 h-8 ml-3"
          >
            <path
              d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
            />
          </svg>

          <button
            class="w-5/6 h-fit p-2 bg-[#F9531F] rounded-md text-white hover:bg-gray-300 hover:text-[#F9531F] hover:border-[#F9531F] hover:border-2 text-center font-semibold text-base drop-shadow-2xl"
            onclick="window.location.href='/carrinho';"
          >
            COMPRAR
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
    {{/inline}}
{{/main}}