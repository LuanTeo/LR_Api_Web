{{#> main}}
{{#*inline "content"}}
        <div class="w-full h-screen flex flex-col justify-start items-center mt-28">
          <h1>Listagem de Usuários</h1>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>
          <a href="/user/edit/{{this.id}}">Editar</a>
          <a href="/user/delete/{{this.id}}">Excluir</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <a href="/users/formulario">Adicionar Novo Usuário</a>

        </div>
{{/inline}}
{{/main}}
  