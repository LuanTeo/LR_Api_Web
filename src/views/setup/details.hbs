{{#> main}}
  {{#*inline "content"}}
    <div class="w-full flex">
      <div class="w-3/5 space-y-5">
        <div class="relative w-full">
          <!-- Ícone de favorito -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-heart w-12 ml-3 mt-3 hover:fill-[#F9531F] hover:stroke-[#F9531F] absolute"
            onclick=""
          >
            <path
              d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
            />
          </svg>
          <!-- Imagem do setup -->
          <img
            src="{{setup.imagem}}"
            alt="{{setup.nome}}"
            class="w-full rounded-2xl"
          />
        </div>
        <div class="h-36 bg-gray-200 rounded-xl flex justify-evenly items-center">
          <div class="flex flex-col h-3/4 max-[450px]:w-2/6 w-4/6 p-3">
            <p class="text-[#F9531F] font-bold opacity-85 line-through">
              R$ {{setup.valor*1.3}}
            </p>
            <p
              class="text-green-500 text-4xl font-bold"
              style="text-shadow: 2px 2px 5px #2a3da4"
            >
              R$ {{setup.valor}}
            </p>
          </div>
          <div class="flex flex-col gap-4">
            <button
              type="button"
              class="bg-gradient-to-r from-[#2a3da4] to-[#000699] hover:from-[#8CD6FF] hover:to-[#C1C0FF] rounded-3xl h-12 py-2 px-2 text-white font-bold text-wrap text-sm w-48 flex items-center justify-center gap-3 shadow-black shadow-[1px_2px_10px]"
              style="text-shadow: 2px 2px 3px #2a3da4"
            >
              COMPRAR
              <svg
                version="1.1"
                id="Uploaded to svgrepo.com"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                viewBox="0 0 32 32"
                xml:space="preserve"
                fill="currentColor"
                class="w-6"
                onclick="window.location.href='/pagamento';"
              >
                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                <g
                  id="SVGRepo_tracerCarrier"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></g>
                <g id="SVGRepo_iconCarrier">
                  <path
                    d="M27.857,27.864C27.935,29.572,26.571,31,24.861,31H7.139c-1.71,0-3.075-1.428-2.997-3.136L4.957,9.955 C4.981,9.42,5.421,9,5.956,9h20.089c0.535,0,0.975,0.42,0.999,0.955L27.857,27.864z M16.185,1.003C12.787,0.901,10,3.625,10,7v1h2V7 c0-2.209,1.791-4,4-4s4,1.791,4,4v1h2V7.252C22,3.966,19.468,1.101,16.185,1.003z"
                  ></path>
                </g>
              </svg>
            </button>
            <button
              type="button"
              class="bg-gradient-to-r from-[#2a3da4] to-[#000699] hover:from-[#8CD6FF] hover:to-[#C1C0FF] rounded-3xl h-12 py-2 px-2 text-white font-bold text-wrap text-sm w-48 flex items-center justify-center gap-3 shadow-black shadow-[1px_2px_10px]"
              style="text-shadow: 2px 2px 3px #2a3da4"
            >
              ADICIONAR AO CARRINHO
              <svg
                version="1.1"
                id="Layer_1"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                viewBox="0 0 32 32"
                xml:space="preserve"
                fill="currentColor"
                class="w-10"
                onclick="window.location.href='/carrinho';"
              >
                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                <g
                  id="SVGRepo_tracerCarrier"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></g>
                <g id="SVGRepo_iconCarrier">
                  <circle
                    style="
                      fill: none;
                      stroke: currentColor;
                      stroke-width: 2;
                      stroke-miterlimit: 10;
                    "
                    cx="22"
                    cy="24"
                    r="2"
                  ></circle>
                  <circle
                    style="
                      fill: none;
                      stroke: currentColor;
                      stroke-width: 2;
                      stroke-miterlimit: 10;
                    "
                    cx="13"
                    cy="24"
                    r="2"
                  ></circle>
                  <path
                    d="M25.658,10l-2.422,9H10.781L8.159,8.515C7.937,7.625,7.137,7,6.219,7H4C3.448,7,3,7.448,3,8c0,0.552,0.448,1,1,1h2.219 l2.621,10.485C9.063,20.375,9.863,21,10.781,21h12.455c0.902,0,1.692-0.604,1.93-1.474L27.764,10H25.658z"
                  ></path>
                  <line
                    style="
                      fill: none;
                      stroke: currentColor;
                      stroke-width: 2;
                      stroke-miterlimit: 10;
                    "
                    x1="17"
                    y1="7"
                    x2="17"
                    y2="13"
                  ></line>
                  <polygon points="21,12 17,16 13,12 "></polygon>
                </g>
              </svg>
            </button>
          </div>
        </div>
      </div>
      <div class="w-2/5 flex justify-center">
        <div class="w-4/5 h-[820px] text-wrap bg-gray-200 rounded-lg overflow-y-scroll">
          <p
            class="text-3xl font-bold w-full text-center py-5"
            style="text-shadow: 2px 3px 5px #2a3da4"
          >
            {{setup.nome}}
          </p>
          <p class="w-full px-2 text-justify">{{setup.descricao}}</p>
          <ul class="list-inside px-2 py-5 custom-list">
            {{#each setup.perifericos}}
              <li>
                <p class="font-semibold">{{this.nome}}:</p>
                {{this.especificacao}}<br />
                <p class="font-semibold">COMPRE SEPARADO:</p>
                <a class="text-[#2a3da4] font-medium hover:underline" href="{{this.link}}">
                  {{this.nome}}
                </a>
              </li>
            {{/each}}
            {{#each setup.computadores}}
              <li>
                <p class="font-semibold">{{this.nome}}:</p>
                {{this.especificacao}}<br />
                <p class="font-semibold">COMPRE SEPARADO:</p>
                <a class="text-[#2a3da4] font-medium hover:underline" href="{{this.link}}">
                  {{this.nome}}
                </a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <!-- Seção de Setups Recomendados -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6" style="text-shadow: 2px 2px 4px #2a3da4">
        Setups Recomendados
      </h2>
      <div class="flex overflow-x-auto gap-6 pb-4">
        {{#each recomendados}}
          <div
            class="w-72 flex-shrink-0 border-[#2a3da4] border-4 rounded-xl relative hover:scale-105 transition-transform duration-300 cursor-pointer"
            onclick="window.location.href='/setup/{{this.id}}';"
          >
            <img
              src="{{this.imagem}}"
              alt="{{this.nome}}"
              class="w-full h-48 object-cover rounded-t-xl"
            />
            <p
              class="w-full text-white font-bold text-xl text-center self-end absolute p-3"
              style="text-shadow: 1px 4px 4px #ff00b8"
            >
              {{this.nome}}
            </p>
          </div>
        {{/each}}
      </div>
    </div>
  {{/inline}}
{{/main}}